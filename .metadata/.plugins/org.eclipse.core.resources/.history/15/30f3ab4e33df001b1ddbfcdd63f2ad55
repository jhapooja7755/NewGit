package pooja;

public class EquilibriumPoint {

	public static void main(String[] args) {
		int arr[] = {1,3,5,2,2};
		int sum=0;
		int sum1=0;
		int ep = arr[0];
		for(ep=0;ep<arr.length;ep++)
		{
		for(int i=0;i<ep;i++)
		{
			sum = sum+arr[i];
		}
		for(int i=ep+1;i<arr.length;i++)
		{
			sum1 = sum1+arr[i];
		}
		ep++;
		if(sum==sum1)
		{
			System.out.println(ep);
		}
		//ep++;
		}
		

	}

}
